{
      "include": ["**/*.ts", "**/*.tsx"],
      "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2022"],
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "target": "ES2022",
        "strict": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
          "~/*": ["./app/*"]
        }
      }
    }
